{
  "name": "itsukaralink-client",
  "version": "0.0.1-0",
  "description": "www.itsukaralink.jp API Client",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ndxbn-tokyo/itsukaralink-client.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndxbn-tokyo/itsukaralink-client/issues"
  },
  "homepage": "https://github.com/ndxbn-tokyo/itsukaralink-client#readme",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": "lib/cli.js",
  "scripts": {
    "prepare": "run-s build",
    "start": "node lib/server.js",
    "pretest": "run-s lint",
    "test": "jest --forceExit --detectOpenHandles --passWithNoTests",
    "lint": "run-p lint:*",
    "lint:tslint": "tslint -p tsconfig.test.json",
    "lint:tsc": "tsc -p tsconfig.test.json",
    "lint:prettier": "prettier -l \"**/*\"",
    "fmt": "run-s format",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"**/*\"",
    "format:tsc": "tslint -p tsconfig.test.json --fix",
    "prebuild": "run-s clean",
    "build": "tsc",
    "clean": "run-p clean:*",
    "clean:lib": "shx rm -rf lib/*"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/jest": "24.0.11",
    "@types/node": "10.14.5",
    "jest": "24.7.1",
    "npm-run-all": "4.1.5",
    "prettier": "1.17.0",
    "shx": "0.3.2",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)",
      "**/?+Spec.ts?(x)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!**/index.ts"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "axios": "~0.18.0"
  }
}
